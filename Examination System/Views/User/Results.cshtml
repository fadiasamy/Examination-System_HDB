@model IEnumerable<ExamResult>

@{
    ViewData["Title"] = "Results";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Exam Results</h2>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var result in Model)
                {
                    <tr>
                        <td>@result.ExamDate.ToString("d")</td>
                        <td>@result.Score</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No results available.</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center mb-3">
        <a asp-action="ExamResult" class="btn btn-info">Go to Exam Result</a>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
    }

    .table {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    th {
        background-color: #007bff;
        color: white;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    td {
        text-align: center;
    }
</style>
