@model Examination_System.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Login</h2>

    <form asp-action="Login" method="post" class="border p-4 rounded shadow">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email" class="font-weight-bold">Email</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="font-weight-bold">Password</label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
        </div>

    </form>
</div>

<style>
    .container {
        max-width: 400px; 
        margin: auto; 
    }

    form {
        background-color: #f8f9fa; 
    }

    .form-group label {
        color: #333; 
    }

    .btn {
        font-size: 18px; 
    }

    .text-danger {
        font-size: 0.9em; 
    }

    h2 {
        margin-bottom: 20px;
    }

    form {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>
