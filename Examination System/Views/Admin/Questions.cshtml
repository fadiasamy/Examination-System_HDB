@model IEnumerable<Examination_System.Models.Question>

<div class="container mt-5">
    <h2 class="text-center">All Questions</h2>
    <p class="text-center">
        <a asp-action="CreateQuestion" class="btn btn-primary">Create New Question</a>
    </p>
    <table class="table table-bordered table-hover mt-4">
        <thead class="thead-light">
            <tr>
                <th>Question Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Question_Text)</td>
                        <td>
                            <a asp-action="EditQuestion" asp-route-id="@item.Question_Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="DeleteQuestion" asp-route-id="@item.Question_Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this question?');">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No questions available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 800px; 
        margin: auto; 
    }

    h2 {
        margin-bottom: 30px; 
    }

    .btn {
        margin-right: 5px; 
    }

    .table {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); 
    }

    .thead-light {
        background-color: #f8f9fa; 
    }

    tr:hover {
        background-color: #f1f1f1; 
    }

    .text-center {
        margin-bottom: 20px; 
    }
</style>
