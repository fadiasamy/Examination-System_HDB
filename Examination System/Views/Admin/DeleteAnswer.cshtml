@model Examination_System.Models.Answer

<h3>Are you sure you want to delete this answer?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Answer_text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Answer_text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Is_correct)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Is_correct)
        </dd>
    </dl>

    <form asp-action="DeleteAnswer">
        <input type="hidden" asp-for="Answer_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="EditQuestion" asp-route-id="@Model.Question_Id" class="btn btn-secondary ">Back to Question</a>
    </form>
</div>