@model Examination_System.Models.Question
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div class="container mt-5">
    <h4 class="text-center">Create New Question</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="CreateQuestion" method="post" class="border p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Question_Text" class="control-label font-weight-bold"></label>
                    <input asp-for="Question_Text" class="form-control" placeholder="Enter your question here" />
                    <span asp-validation-for="Question_Text" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Question_Score" class="control-label font-weight-bold"></label>
                    <input asp-for="Question_Score" type="number" class="form-control" placeholder="Enter score for the question" />
                    <span asp-validation-for="Question_Score" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg mt-4" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Questions" class="btn btn-secondary">Back to Questions</a>
    </div>
</div>

<style>
    .container {
        max-width: 600px; 
        margin: auto; 
    }

    h4 {
        margin-bottom: 20px; 
    }

    form {
        background-color: #f8f9fa; 
    }

    .form-group label {
        color: #333;
    }

    .btn {
        font-size: 18px; 
    }

    .text-danger {
        font-size: 0.9em; 
    }

    form {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>
